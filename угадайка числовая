from random import *
num = randint(1,99)
pop = 0
liv=4
print('Добро пожаловать в числовую угадайку.У вас будет 5 жизней.')

def is_valid(s):
    return s.isdigit() and 1 <= int(s) <= 100
while True:
    print('Введите предполагаемое число от 1 до 100.')
    s=input()
    if liv == 0 :
        print('Ваши жизни закончились.Будь осторожнее, за тобой уже началась охота...')
        break
    if is_valid(s) == False:
        print('А может быть все-таки введем целое число от 1 до 100?')
        continue
    else:
        s=int(s)
    if s < num :
        print('Ваше число меньше загаданного, попробуйте еще разок.У тебя осталось',liv,'жизней.Будь внимательнее')
        pop +=1
        liv -=1
    elif s > num :
        print('Ваше число больше загаданного, попробуйте еще разок.У тебя осталось',liv,'жизней.Будь внимательнее')
        pop +=1
        liv -=1
    elif s == num:
        if pop==1:
            print('Вы угадали, поздравляем!', 'Вы сделали', pop, 'попытку')
        if 2<=pop<=4:
            print('Вы угадали, поздравляем!','Вы сделали',pop,'попытки' )
        if pop == 5:
            print('Вы угадали, поздравляем!', 'Вы сделали', pop, 'попыток')

        break
print('Спасибо, что играли в числовую угадайку. Еще увидимся...')
